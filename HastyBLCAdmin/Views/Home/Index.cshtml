@model BookListViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <h2>Books List</h2>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="d-flex align-items-center justify-content-center pb-4">
        <a asp-controller="Home" asp-action="AddBook" class="btn btn-outline-danger">Add Book</a>
    </div>
    @foreach (var book in Model.Books!)
    {
        <h2>@book.Title</h2>
        <ul>
            <li>@book.AuthorName</li>
            <li>@book.PublishDate</li>
            <li>@(book.Genres != null ? string.Join(", ", book.Genres) : "No Genres")</li>
        </ul>
        <div class="d-flex align-items-center justify-content-center pb-4">
            <a asp-controller="Home" asp-action="EditBook" class="btn btn-outline-danger">Edit Book</a>
        </div>
        <div class="d-flex align-items-center justify-content-center pb-4">
            <form method="post" asp-action="DeleteBook">
                <input type="hidden" name="bookId" value="@book.BookId" />
                <button type="submit" class="btn btn-outline-danger">Delete</button>
            </form>
        </div>
    }
</div>
