@model BookListViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <h2>Books List</h2>
    <div class="d-flex align-items-center justify-content-center pb-4">
        <a asp-controller="Home" asp-action="AddBook" class="btn btn-outline-danger">Add Book</a>
    </div>
    @foreach (var book in Model.Books!)
    {
        <h2>@book.Title</h2>
        <ul>
            <li>@book.AuthorName</li>
            <li>@book.PublishDate</li>
            <li>@(book.Genres != null ? string.Join(", ", book.Genres) : "No Genres")</li>
        </ul>
        <div class="d-flex align-items-center justify-content-center pb-4">
            <a asp-controller="Home" asp-action="EditBook" asp-route-isbn="@book.Isbn" class="btn btn-outline-danger">Edit Book</a>
        </div>
        <div class="d-flex align-items-center justify-content-center pb-4">
            <a asp-controller="Home" asp-action="DeleteBook" class="btn btn-outline-danger">Delete Book</a>
        </div>
    }
</div>
