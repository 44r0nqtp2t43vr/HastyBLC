@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<link rel="stylesheet" href="~/css/addgenre.css" />
<div class="modal" id="deleteReviewModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Delete Review</h4>
            </div>
            <!-- Modal body -->
            <form method="post" action="/Books/DeleteReview">
                <div class="form-outline mb-4">
                    <input type="hidden" id="deleteReviewId" name="reviewId" />
                    <p>Are you sure you want to delete this review?</p>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button class="btn btn-close" data-dismiss="modal">Close</button>
                    <button class="btn btn-add-genre" type="submit">Delete Review</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/viewbook.js"></script>