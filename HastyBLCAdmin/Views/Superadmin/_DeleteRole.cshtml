@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model Services.ServiceModels.AspNetRoleViewModel
<link rel="stylesheet" href="~/css/editrole.css" />

<div class="modal" id="deleteRoleModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Delete Role</h4>
            </div>
            <!-- Modal body -->
            <form method="post" action="/Superadmin/DeleteRole" class="d-inline-block">
                <input type="hidden" name="roleId" value="@Model.RoleId" />
                <p>Are you sure you want to delete this role?</p>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button class="btn-custom btn-close" data-dismiss="modal">Close</button>
                    <button class="btn-custom btn-add-genre" type="submit">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/superadmin.js"></script>
