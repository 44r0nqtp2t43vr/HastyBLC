@model SuperadminViewModel
@section styles {
    <link rel="stylesheet" href="~/css/genres.css" />
    <link rel="stylesheet" href="~/css/HastyBLCStyle.css" />
    <link rel="stylesheet" href="~/css/superadmin.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}
@{
    ViewData["Title"] = "Super Admin";
}

<html>
<body>
    @await Html.PartialAsync("_AddUserRole", new Services.ServiceModels.AspNetUserRoleViewModel())
    @await Html.PartialAsync("_EditRole", new Services.ServiceModels.AspNetRoleViewModel())
    @await Html.PartialAsync("_EditUser", new Services.ServiceModels.UserViewModel())

    <div class="user-master-home">
        <div class="div">
            <header class="header">
                <div class="text-wrapper">Hasty Book Lovers’ Club</div>
                <div class="text-wrapper-2">
                    @* <img class="icon-logout" alt="Icon logout" src="~/img/logout-icon.png" /> *@
                    <form method="post" asp-controller="Account" asp-action="SignOutUser" id="logoutForm">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fas fa-sign-out-alt"></i>Logout
                        </button>
                    </form>
                </div>
                <div class="text-wrapper-3">USER MASTER</div>
                @* <img class="icon-logout" alt="Icon logout" src="~/img/logout-icon.png" /> 
                <form method="post" asp-controller="Account" asp-action="SignOutUser" id="logoutForm">
                <button type="submit" class="btn btn-outline-danger"><i class="fas fa-sign-out-alt"></i>Logout</button>
                </form> *@
                <img class="logo" alt="Logo" src="~/img/logo.png" />
            </header>
            <div class="roles-section">
                <div class="overlap">
                    <div class="text-wrapper-5">ROLES</div>
                    <div class="roles-wrapper">
                        <ul class="role-list">
                            @foreach (var role in @Model.Roles!)
                            {
                                @if (role.Name != "Superadmin")
                                {
                                    <li>
                                        <span class="list-text">@role.Name</span>
                                        <button class="btn btn-outline-danger editRoleBtn" data-role-id="@role.Id" data-role-name="@role.Name">
                                            <img src="~/img/edit2.png" alt="Edit" style="width: 30px; height: 30px;" />
                                        </button>
                                        <form method="post" action="/Superadmin/DeleteRole" class="d-inline-block">
                                            <input type="hidden" name="roleId" value="@role.Id" />
                                            <button type="submit" onclick="return confirm('Are you sure you want to delete this role?');">
                                                <img src="~/img/delete2.png" alt="Delete" style="width: 30px; height: 30px;" />
                                            </button>
                                        </form>
                                    </li>
                                }
                            }
                        </ul>
                        <div class="create-role-button">
                            <div class="div-wrapper">
                                <div>
                                    <a class="text-wrapper-6" asp-controller="Superadmin" asp-action="CreateRole">Create Role</a>
                                </div>
                            </div> 
                        </div>
                    </div>       
                </div>
            </div>

            <div class="users-section">
                <div class="overlap-3">
                    <div class="text-wrapper-10">USERS</div>
                    <div class="create-role-button">
                        <div class="div-wrapper">
                            <a class="text-wrapper-11" asp-controller="Superadmin" asp-action="Register">Create User</a>
                        </div>
                    </div>
                    <ul class="list">
                        @foreach (var user in @Model.Users!)
                        {
                            @if (user.UserName != "superadmin")
                            {
                                <li class="row mb-3">
                                    <div class="col-md-3">
                                        <strong class="list-text">Username:</strong>
                                        <ul class="user-list">
                                            <li>
                                            <li>
                                                <span class="list-text">@user.UserName</span>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-md-3">
                                        <strong class="list-text">Email Address:</strong>
                                        <ul class="user-list">
                                            <li>
                                                <span class="list-text">@user.Email</span>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-md-3">
                                        <strong class="list-text">User Roles:</strong>
                                        <ul class="user-list">
                                            @foreach (var userRole in Model.UserRoles![user.Id])
                                            {
                                                <li>
                                                    <span class="list-text">@userRole.Name</span>
                                                    <form method="post" action="/Superadmin/DeleteUserRole" class="d-inline-block">
                                                        <input type="hidden" name="userId" value="@user.Id" />
                                                        <input type="hidden" name="roleName" value="@userRole.Name" />
                                                        <button class="btn btn-outline-danger" type="submit" onclick="return confirm('Are you sure you want to delete this role for this user?');">
                                                            <img src="~/img/delete2.png" alt="Delete" style="width: 30px; height: 30px;" />
                                                        </button>
                                                    </form>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                    <div class="col-md-3">
                                        <strong class="list-text">User Option:</strong>
                                        <ul class="user-list">
                                            <li>
                                                <button class="btn btn-outline-danger addUserRoleBtn" data-user-id="@user.Id">
                                                    <img src="~/img/addrole2.png" alt="AddRole" style="width: 30px; height: 30px;" />
                                                </button>
                                                <button class="btn btn-outline-danger editUserBtn" data-user-id="@user.Id" data-user-email="@user.Email" data-user-name="@user.UserName">
                                                    <img src="~/img/edit2.png" alt="Edit" style="width: 30px; height: 30px;" />
                                                </button>
                                                <form method="post" action="/Superadmin/DeleteUser" class="d-inline-block">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <button class="btn btn-outline-danger" type="submit" onclick="return confirm('Are you sure you want to delete this user?');">
                                                        <img src="~/img/delete2.png" alt="Delete" style="width: 30px; height: 30px;" />
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>

        </div>
    </div>
</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/superadmin.js"></script>

<script>
    $('.deleteUserRoleBtn').on('click', function () {
        var userId = $(this).data('user-id');
        var roleName = $(this).data('role-name');
        $('#userIdToDeleteRole').val(userId);
        $('#roleNameToDelete').val(roleName);
    });
</script>
