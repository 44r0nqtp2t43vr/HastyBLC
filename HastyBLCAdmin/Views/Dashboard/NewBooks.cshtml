@model BookListViewModel
@section styles {
    <link rel="stylesheet" href="~/css/HastyBLCStyle.css" />
}
@{
    ViewData["Title"] = "New Books";
}
<html>
<body>
    <div class="sidebar">
        <div class="image">
            <img src="~/img/logo.png" class="imagehw">
        </div>
        <div class="hasty">
            <h1>HASTY</h1>
            <h1>BLC</h1>
        </div>
        <div class="screens">
            <a asp-controller="Dashboard" asp-action="Dashboard" class="active">Dashboard</a>
            <a asp-controller="Genres" asp-action="Genres">Genres</a>
            <a asp-controller="Books" asp-action="Books">Books</a>
            <form method="post" asp-controller="Account" asp-action="SignOutUser" id="logoutForm">
                <button type="submit" class="logout-button">Logout</button>
            </form>
        </div>
    </div>
    <div class="user-info-container">
        <!-- Wrap the username in a container -->
        <span class="username">Welcome, @User.Identity.Name</span> <!-- Display the username -->
    </div>
    <div class="content">
        <div>
            <h2 class="title">New Books</h2>
            @{
                var sortedBooks = Model.Books?.AsEnumerable().OrderByDescending(book => book.CreatedTime);
            }

            @for (int i = 0; i < sortedBooks?.Count(); i += 5)
            {
                <div>
                    @foreach (var book in sortedBooks.Skip(i).Take(5))
                    {
                        <div class="newBookContainer">
                            <div class="bookContent">
                                <h5 style="max-width:150px;">@book.Title</h5>
                                <ul>
                                    <li>@book.AuthorName</li>
                                    @* <li>@book.CreatedTime</li>  *@ @* <--- to check if content is in proper order according to latest creation time, uncomment the commented list *@
                                </ul>
                            </div>
                        </div>
                    }
                </div> @* to go back, just press the dashboard in the sidebar *@
            }
        </div>
    </div>
</body>
</html>
