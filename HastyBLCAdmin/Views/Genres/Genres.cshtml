@model HastyBLCAdmin.Models.GenresPageViewModel

@section styles {
    <link rel="stylesheet" href="~/css/genres.css" />
    <link rel="stylesheet" href="~/css/HastyBLCStyle.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

}
@{
    ViewData["Title"] = "Genres";
}
<html>
<body>
    <div class="sidebar">
        <div class="image">
            <img src="~/img/logo.png" class="imagehw">
        </div>
        <div class="hasty">
            <h1>HASTY</h1>
            <h1>BLC</h1>
        </div>
        <div class="screens">
            <a asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a>
            <a asp-controller="Genres" asp-action="Genres" class="active">Genres</a>
            <a asp-controller="Books" asp-action="Books">Books</a>
            <form method="post" asp-controller="Account" asp-action="SignOutUser" id="logoutForm">
                <button type="submit" class="logout-button"><i class="fas fa-sign-out-alt"></i> Logout</button>
            </form>
        </div>
    </div>
    <div class="user">
        <div class="user-info-container">
            <span class="username username-truncate">@User.Identity.Name</span>
            <div class="profile-image-container"></div>
        </div>
    </div>
    <div class="content">
        <div class="text-center">
            <!-- Button to trigger the modal -->
            @* <a asp-controller="Genres" asp-action="AddGenre" class="btn btn-outline-danger">Add Genre</a> *@
            <div class="d-flex align-items-center justify-content-center pb-4">
                <button id="addGenreBtn" class="btn btn-outline-danger fixed-bottom-right">Add Genre</button>
            </div>

            <!-- The Modal -->
            @await Html.PartialAsync("_AddGenre", new Services.ServiceModels.GenreViewModel())
            @await Html.PartialAsync("_EditGenre", new Services.ServiceModels.GenreViewModel())
            @await Html.PartialAsync("_DeleteGenre")
            
            @if (Model == null)
            {
                <h2>There are no genres</h2>
            } 
            else
            {
                <div class="genres-row">
                @foreach (var genre in Model.Genres)
                {
                    <div class="genre-container">
                        <form method="get" asp-action="ViewGenre" class="genre-form">
                            <input type="hidden" name="genreId" value="@genre.GenreId" />
                            <button type="submit" class="genre-button">@genre.Name</button>
                        </form>
                            <button class="btn btn-outline-danger editGenreBtn" data-genre-id="@genre.GenreId" data-genre-name="@genre.Name">
                                <i class="fas fa-edit"></i> 
                            </button>
                            <button class="btn btn-outline-danger deleteGenreBtn" data-genre-id="@genre.GenreId">
                                <i class="fas fa-trash"></i> 
                            </button>

                    </div>

                  
                }
                </div>
            }

            

            
        </div>
        <div class="fixed-pagination-container">
            <ul class="pagination justify-content-center spaced-pagination">
                <li class="page-item">
                    <a class="page-link arrow-link" href="@Url.Action("Genres", new { page = 1 })">&#9664;</a>
                </li>
                <li class="page-item">
                    <a class="page-link arrow-link" href="@Url.Action("Genres", new { page = Math.Max(Model.CurrentPage - 1, 1) })">&#8249;</a>
                </li>
                @if (Model.TotalPages > 5)
                {
                    @if (Model.CurrentPage > 3)
                    {
                        <li class="page-item">
                            <a class="page-link page-number" href="@Url.Action("Genres", new { page = 1 })">1</a>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link" ; style="border: none; background-color: #EEDEAA; color: black">...</span>
                        </li>
                    }
                    @for (int i = Math.Max(Model.CurrentPage - 2, 1); i <= Math.Min(Model.CurrentPage + 2, Model.TotalPages); i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link page-number" href="@Url.Action("Genres", new { page = i })">@i</a>
                        </li>
                    }
                    @if (Model.CurrentPage < Model.TotalPages - 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link"; style="border: none; background-color: #EEDEAA; color: black">...</span>
                        </li>
                        <li class="page-item">
                            <a class="page-link page-number" href="@Url.Action("Genres", new { page = Model.TotalPages })">@Model.TotalPages</a>
                        </li>
                    }
                }
                else
                {
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link page-number" href="@Url.Action("Genres", new { page = i })">@i</a>
                        </li>
                    }
                }
                <li class="page-item">
                    <a class="page-link arrow-link" href="@Url.Action("Genres", new { page = Math.Min(Model.CurrentPage + 1, Model.TotalPages) })">&#8250;</a>
                </li>
                <li class="page-item">
                    <a class="page-link arrow-link" href="@Url.Action("Genres", new { page = Model.TotalPages })">&#9654;</a>
                </li>
            </ul>
        </div>
    </div>
</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/genre.js"></script>
